<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body text-center">
        <h1 class="mb-3">
          <img src="https://tse3.mm.bing.net/th?id=OIP.Qqc5u-ro5vliMEb-ax6smgAAAA&pid=Api&P=0&h=180" alt="icon" width="20%" />
        </h1>
        <h2>
          Register New User
        </h2>
       
        <form action="/users/create" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <hr>
        <p class="mt-4"><a href="/users/auth/google"><img src="https://tse1.mm.bing.net/th?id=OIP.jyFm8SOzN9ylA06RmfOdEQHaE7&pid=Api&P=0&h=180" style="width:  80px; height: 25px;"></a>  </p>
        <p class="mt-1">sign up with google</p>
     <p class="mt-2">|Already have an account? <a href="/users/sign-in">Login</a></p>
      </div>
    </div>
  </div>